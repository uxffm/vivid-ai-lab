---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const latest = posts
  .filter((p) => !!p.data?.title && !!p.data?.date)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 4);

const currentYear = new Date().getFullYear();
---

<footer class="bg-muted/50 border-t border-border py-8 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 items-start">
      <!-- Copyright -->
      <div class="text-sm text-muted-foreground order-3 md:order-1">
        © {currentYear} KI Agentur Frankfurt. Alle Rechte vorbehalten.
      </div>

      <!-- Helpful Links -->
      <div class="order-1 md:order-2">
        <h4 class="text-sm font-semibold text-foreground mb-3">Hilfreiche Links</h4>
        <ul class="space-y-2 text-sm">
          {latest.map((post) => (
            <li>
              <a href={`/blog/${post.slug}`} class="text-muted-foreground hover:text-foreground transition-colors">
                {post.data.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Links -->
      <div class="order-2 md:order-3">
        <h4 class="text-sm font-semibold text-foreground mb-3">Services</h4>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/ki-beratung" class="text-muted-foreground hover:text-foreground transition-colors">
              KI Beratung
            </a>
          </li>
          <li>
            <a href="/ki-automatisierung" class="text-muted-foreground hover:text-foreground transition-colors">
              KI Automatisierung
            </a>
          </li>
          <li>
            <a href="/ki-modelle-lokal" class="text-muted-foreground hover:text-foreground transition-colors">
              Lokale KI Modelle für Unternehmen
            </a>
          </li>
          <li>
            <a href="/vibe-coding" class="text-muted-foreground hover:text-foreground transition-colors">
              Vibe Coding Agentur
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal Links -->
      <div class="flex md:justify-end items-center gap-6 text-sm order-3 md:order-4">
        <a 
          href="/impressum" 
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          Impressum
        </a>
        <a 
          href="/datenschutz" 
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          Datenschutz
        </a>
      </div>
    </div>
  </div>
</footer>


