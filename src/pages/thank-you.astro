---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vielen Dank" description="Vielen Dank für Ihre Nachricht" noindex={true}>
  <main class="min-h-[60vh] flex items-center justify-center px-6 py-24">
    <div class="max-w-xl text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Vielen Dank für Ihre Nachricht</h1>
      <p class="text-lg text-muted-foreground mb-8">
        Wir melden uns in Kürze bei Ihnen.
      </p>
      <a href="/" class="inline-flex items-center justify-center px-6 py-3 rounded-[5px] bg-gradient-to-r from-blue-600 to-purple-600 text-white hover:from-blue-700 hover:to-purple-700 transition-colors">
        Zur Startseite
      </a>
    </div>
  </main>
</Layout>
