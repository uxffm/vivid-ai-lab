---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Vivid AI Lab">
  <div class="min-h-screen bg-background flex items-center justify-center">
    <div class="text-center space-y-8 px-6">
      <div class="space-y-4">
        <h1 class="text-6xl md:text-8xl font-bold text-gradient">
          404
        </h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-foreground">
          Page Not Found
        </h2>
        <p class="text-lg text-muted-foreground max-w-md mx-auto">
          The page you're looking for doesn't exist. Let's get you back on track to exploring the future of AI.
        </p>
      </div>
      
      <div class="pt-8">
        <a 
          href="/" 
          class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground hover:bg-primary/90 h-12 px-8 py-3 text-lg font-medium transition-colors"
        >
          Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>
